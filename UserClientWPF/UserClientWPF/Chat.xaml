<Window x:Class="UserClientWPF.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserClientWPF"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800" Background="Beige">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="MessageBox" Width="300" Height="50" FontSize="30"/>
            <Button x:Name="SubmitMessage" Content="Submit Message" Width="100" Height="50" Margin="5,5,5,5" Click="SubmitMessage_Click"/>
        </WrapPanel>
    </Grid>
</Window>
